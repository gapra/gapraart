<!DOCTYPE html>
<html>
<head>
  <title>Gapra :: I'm graphic, web, UI, animation designer, frontend developer and flash developer.</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body onload="hide_preloader()">

	<div id="preloader">
		<div>
			<%= image_tag('preloader.gif', id: "preloader_image") %>
			loading...
		</div>
	</div><!-- #preloader -->

	<%= render "layouts/header" %>

	<%= yield %>

	<%= render "layouts/footer" %>

	<div class="backtop">
		<p>Top</p>
		<i class="backtop-ico"> </i>
	</div>
	<svg version="1.1" xmlns="http://www.w3.org/2000/svg" style="height:0;">    
    	<filter id="greyscale">
	    	<feColorMatrix type="matrix" values="0.3333 0.3333 0.3333 0 0
	                                          0.3333 0.3333 0.3333 0 0
	                                          0.3333 0.3333 0.3333 0 0
	                                          0      0      0      1 0"/>
	    </filter>
	</svg>
	<script type="text/javascript">
		//Preloader
		rotate = 1;
		function hide_preloader() {
			rotate = 0;
			$('#preloader').fadeOut(1000);
		}

		$(document).ready(function(){
			// calculate height 
			var screen_ht = $(window).height();
			var preloader_ht = 128;
			var padding =(screen_ht/2)-preloader_ht;
			
			$('#preloader').css('padding-top',padding+'px');
			
			// loading animation using script
			function anim(){ $('#preloader_image').animate({left:'0px'}, 8000,
				function(){ 
					$('#preloader_image').animate({left:'0px'}, 5000 ); 
					if(rotate==1){ 
						anim();
					}  
				});
			}
			anim();
		});
	</script>

</body>
</html>
